  "paths": {
    "/v1/customers/credentials": {
      "post": {
        "summary": "Create customer credential",
        "description": "Use this API to create a customer credential",
        "operationId": "Auth_CreateCustomerCredential",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authCreateCustomerCredentialResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authCreateCustomerCredentialRequest"
            }
          }
        ],
        "tags": [
          "Auth"
        ]
      },
      "patch": {
        "summary": "Update customer credential",
        "description": "Use this API to update the customer credential",
        "operationId": "Auth_UpdateCustomerCredential",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authUpdateCustomerCredentialResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authUpdateCustomerCredentialRequest"
            }
          }
        ],
        "tags": [
          "Auth"
        ]
      }
    },
    "/v1/customers/login": {
      "post": {
        "summary": "Login customer",
        "description": "Use this API to login user and get access token",
        "operationId": "Auth_LoginCustomer",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authLoginCustomerResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authLoginCustomerRequest"
            }
          }
        ],
        "tags": [
          "Auth"
        ]
      }
    },
    "/v1/generate_test_access_token": {
      "get": {
        "summary": "Generate banker role access token",
        "description": "Use this API to generate an access token with banker role for testing purposes",
        "operationId": "Auth_GenerateTestAccessToken",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authGenerateTestAccessTokenResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "tags": [
          "Auth"
        ]
      }
    }
  },
  "definitions": {
    "authCreateCustomerCredentialRequest": {
      "type": "object",
      "properties": {
        "customerRid": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "authCreateCustomerCredentialResponse": {
      "type": "object",
      "properties": {
        "isCreated": {
          "type": "boolean"
        }
      }
    },
    "authGenerateTestAccessTokenResponse": {
      "type": "object",
      "properties": {
        "accessToken": {
          "type": "string"
        },
        "accessTokenExpiresAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "authLoginCustomerRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "authLoginCustomerResponse": {
      "type": "object",
      "properties": {
        "customerId": {
          "type": "string",
          "format": "int64"
        },
        "shardId": {
          "type": "integer",
          "format": "int32"
        },
        "sessionId": {
          "type": "string"
        },
        "accessToken": {
          "type": "string"
        },
        "refreshToken": {
          "type": "string"
        },
        "accessTokenExpiresAt": {
          "type": "string",
          "format": "date-time"
        },
        "refreshTokenExpiresAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "authUpdateCustomerCredentialRequest": {
      "type": "object",
      "properties": {
        "shardId": {
          "type": "integer",
          "format": "int32",
          "title": "int64 customer_id (get from auth token) \nand customer can update other fields"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "authUpdateCustomerCredentialResponse": {
      "type": "object",
      "properties": {
        "isUpdated": {
          "type": "boolean"
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
